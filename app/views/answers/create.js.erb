<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |error| %>
     $("div.answer_errors").html("<%= j error %>");
  <% end %>
<% else %>
  <% publish_to "/questions/#{@question.id}/answers" do %>
     $('.answers').append("<%= j render @answer %>");
  <% end %>
$('textarea#answer_body').val('');
<% end %>